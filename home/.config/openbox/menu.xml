<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
  <menu id="root-menu" label="OpenBox 3">
    <separator  label="Main Menu" />
    <item label="Terminal">
      <action name="Execute">
        <execute>kitty</execute>
      </action>
    </item>
    <item label="Emacs">
      <action name="Execute">
        <execute>emacs</execute>
      </action>
    </item>
    <item label="Web Browser">
      <action name="Execute">
        <execute>google-chrome-stable</execute>
      </action>
    </item>
    <item label="File Browser">
      <action name="Execute">
        <execute>thunar</execute>
      </action>
    </item>
    <item label="Encryptr">
      <action name="Execute">
        <execute>encryptr</execute>
      </action>
    </item>
    <item label="Steam">
      <action name="Execute">
        <execute>steam-native</execute>
      </action>
    </item>
    <item label="Spotify">
      <action name="Execute">
        <execute>flatpak run --branch=stable --arch=x86_64 --command=spotify --file-forwarding com.spotify.Client @@u</execute>
      </action>
    </item>
    <item label="Pidgin">
      <action name="Execute">
        <execute>pidgin</execute>
      </action>
    </item>

    <separator label="Apps" />

    <menu id="games" label="Games">
      <item label="Mame">
        <action name="Execute">
          <execute>mame</execute>
        </action>
      </item>
      <item label="Emulation Station">
        <action name="Execute">
          <execute>emulationstation</execute>
        </action>
      </item>
      <item label="Retroarch">
        <action name="Execute">
          <execute>retroarch</execute>
        </action>
      </item>
      <item label="Lutris">
        <action name="Execute">
          <execute>lutris</execute>
        </action>
      </item>
    </menu>

    <menu id="media" label="Media">
      <item label="Kodi">
        <action name="Execute">
          <execute>kodi</execute>
        </action>
      </item>
    </menu>

     <menu id="office" label="Office">
      <item label="Libre Office">
        <action name="Execute">
          <execute>libreoffice</execute>
        </action>
      </item>
    </menu>

    <menu id="graphics" label="Graphics">
      <item label="GNU Image Manipulation Program">
        <action name="Execute">
          <execute>gimp-2.10</execute>
        </action>
      </item>
      <item label="Inkscape">
        <action name="Execute">
          <execute>inkscape</execute>
        </action>
      </item>
    </menu>

    <menu id="network" label="Network">
      <item label="FireFox">
        <action name="Execute">
          <execute>firefox</execute>
        </action>
      </item>
      <item label="Transmission">
        <action name="Execute">
          <execute>transmission-gtk</execute>
        </action>
      </item>
    </menu>

    <separator label="System"/>

    <menu id="settings" label="Settings">
      <item label="NVIDIA X Server Settings">
        <action name="Execute">
          <execute>nvidia-settings</execute>
        </action>
      </item>
      <item label="Audio settings">
        <action name="Execute">
          <execute>pavucontrol</execute>
        </action>
      </item>
      <item label="GTK themes">
        <action name="Execute">
          <execute>lxappearance</execute>
        </action>
      </item>
      <item label="OpenBox config">
        <action name="Execute">
          <execute>obconf</execute>
        </action>
      </item>
      <item label="Tint2 config">
        <action name="Execute">
          <execute>tint2conf</execute>
        </action>
      </item>
    </menu>

    <menu id="openbox" label="OpenBox">
      <menu id="client-list-menu"/>
      <item label="Reconfigure">
        <action name="Reconfigure"/>
      </item>
      <separator/>
      <item label="Exit">
        <action name="Exit"/>
      </item>
    </menu>
  </menu>
</openbox_menu>
